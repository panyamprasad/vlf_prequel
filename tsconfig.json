{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es5",
    "rootDir": ".",
    "baseUrl": "src",
    "paths": {
      "@service/*": [
        "app/core/creditsnap/*"
      ],
      "@content/*": [
        "app/content/*"
      ],
      "@customer/*": [
        "app/customer/*"
      ],
      "@core/*": [
        "app/core/*"
      ],
      "@app-core/*": [
        "app/app-core/*"
      ],
      "@config/*": [
        "app/config/*"
      ],
      "@env/*": [
        "environments/*"
      ]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  }
}
